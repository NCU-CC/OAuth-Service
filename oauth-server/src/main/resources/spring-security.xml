<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/security
        http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <security:http pattern="/resource/**" security="none"/>

    <security:http pattern="/management/**" use-expressions="true" entry-point-ref="stubEntry">
        <security:intercept-url pattern="/management/v1/**" access="hasIpAddress('127.0.0.1') or hasIpAddress('0:0:0:0:0:0:0:1')"/>
    </security:http>

    <security:http pattern="/oauth/token" entry-point-ref="stubEntry">
        <security:custom-filter ref="oauthTokenExchangeFilter" after="LAST"/>
    </security:http>

    <security:http disable-url-rewriting="true">

        <security:intercept-url pattern="/oauth/authorize" access="ROLE_USER"/>
        <security:intercept-url pattern="/**" access="IS_AUTHENTICATED_ANONYMOUSLY"/>

        <security:form-login login-page="/login"/>
        <security:custom-filter ref="openidLoginFilter" after="FORM_LOGIN_FILTER"/>
        <security:custom-filter ref="oauthAuthorizationFilter" after="LAST"/>
        <security:csrf/>

    </security:http>

    <security:authentication-manager alias="authenticationManager"/>

    <bean id="stubEntry" class="tw.edu.ncu.cc.oauth.server.service.impl.StubAuthenticationEntry"/>

    <bean id="oauthAuthorizationFilter" class="tw.edu.ncu.cc.oauth.server.filter.OauthAuthorizationFilter">
        <property name="filtPath" value="/oauth/authorize"/>
    </bean>

    <bean id="oauthTokenExchangeFilter" class="tw.edu.ncu.cc.oauth.server.filter.OauthTokenExchangeFilter">
        <property name="filtPath" value="/oauth/token"/>
        <property name="codeExpireSeconds" value="180"/>
    </bean>

    <bean id="openidLoginFilter" class="tw.edu.ncu.cc.oauth.server.filter.OpenIDLoginFilter">
        <property name="loginPath" value="/login"/>
        <property name="loginConfirmPath" value="/login_confirm"/>
    </bean>

</beans>