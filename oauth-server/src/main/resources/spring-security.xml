<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/security
        http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <security:http pattern="/resource/*" security="none"/>
    <security:http pattern="/oauth/token" security="none"/>

    <security:http disable-url-rewriting="true" authentication-manager-ref="authenticationService">

        <security:intercept-url pattern="/oauth/**" access="ROLE_USER"/>
        <security:intercept-url pattern="/**"       access="IS_AUTHENTICATED_ANONYMOUSLY"/>

        <security:form-login login-page="/login"/>

        <security:custom-filter ref="oauthAuthorizationFilter" before="LAST"/>
        <security:custom-filter ref="oauthTokenExchangeFilter" after ="LAST"/>
        <security:custom-filter ref="openidLoginFilter" after="FORM_LOGIN_FILTER"/>

        <security:csrf/>

    </security:http>

    <bean id="authenticationService" class="tw.edu.ncu.cc.oauth.server.service.impl.StubAuthenticationService"/>

    <bean id="oauthAuthorizationFilter" class="tw.edu.ncu.cc.oauth.server.filter.OauthAuthorizationFilter">
        <property name="filtPath" value="/oauth/authorize"/>
    </bean>

    <bean id="oauthTokenExchangeFilter" class="tw.edu.ncu.cc.oauth.server.filter.OauthTokenExchangeFilter">
        <property name="filtPath" value="/oauth/token"/>
        <property name="codeExpireSeconds" value="180"/>
    </bean>

    <bean id="openidLoginFilter" class="tw.edu.ncu.cc.oauth.server.filter.OpenIDLoginFilter">
        <property name="loginPath" value="/login"/>
        <property name="loginConfirmPath" value="/login_confirm"/>
    </bean>

</beans>