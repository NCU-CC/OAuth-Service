<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-4.1.xsd">

    <util:properties id="openidSettingProperties"  location="classpath:openid/openidSetting.properties"/>
    <util:properties id="openidResponseProperties" location="classpath:openid/openidCheck.properties"/>

    <bean class="tw.edu.ncu.cc.openid.consumer.ncu.NCUOpenIDHandler">
        <constructor-arg index="0" ref="openidSettingConfig"/>
        <constructor-arg index="1" ref="openidResponseConfig"/>
    </bean>

    <bean id="openidSettingConfig" class="tw.edu.ncu.cc.openid.consumer.core.config.OpenIDConfig">
        <constructor-arg ref="openidSettingProperties"/>
    </bean>

    <bean id="openidResponseConfig" class="tw.edu.ncu.cc.openid.consumer.core.config.OpenIDConfig">
        <constructor-arg ref="openidResponseProperties"/>
    </bean>

</beans>